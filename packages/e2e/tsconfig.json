{
  "compilerOptions": {
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./*"],
      "contracts/*": ["../../contracts/*"]
    },
    "types": ["node"],
    "lib": ["dom", "dom.iterable", "es2022"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "es2022",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "src/generated.ts"]
}
